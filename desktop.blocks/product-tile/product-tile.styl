.product-tile
  padding: 24px
  border: 1px solid #e5e5e5
  background: #fff
  &__icon
    width: 90px
    height: 90px
    background: #e5e5e5
    margin: 0 auto
    margin-bottom: 8px
  &__name
    font-size: 18px
    line-height: 1.4em
    text-align: center
  &__description
    font-size: 14px
    line-height: 1.4em
    text-align: center
    margin-bottom: 16px
  &__action
    text-align: center

