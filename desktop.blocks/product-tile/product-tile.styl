.product-tile
  padding: 24px
  border: 1px solid #ccc
  background: #fff
  &__icon
    width: 90px
    height: 90px
    background: #ccc
    margin: 0 auto
    margin-bottom: 8px
    display: block
    border-radius: 4px
  &__name
    font-size: 18px
    line-height: 1.4em
    text-align: center
    margin-bottom: 4px
  &__web
    text-align: center
    color: #44b
    margin-bottom: 16px
    font-size: 14px
    display: block
    text-align: center
  &__description
    font-size: 14px
    line-height: 1.4em
    text-align: center
    margin-bottom: 16px
  &__action
    text-align: center

