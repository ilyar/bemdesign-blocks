.social-feedback-body
  padding: $xl
  text-align: center
  background: $project
  color: white
  border-radius: 5px
  line-height: 1.2em
  &:after
    content: '';
    position: absolute
    bottom: 50px
    left: 135px
    border-style: solid
    border-width: 30px 40px 0 0
    border-color: #1461b9 transparent transparent transparent
    -webkit-transform: rotate(360deg)
